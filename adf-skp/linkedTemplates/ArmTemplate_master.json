{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adf-skp"
		},
		"DevDb_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'DevDb'"
		},
		"FilesStorage_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'FilesStorage'"
		},
		"DEV_DB_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "skp-server.database.windows.net"
		},
		"DEV_DB_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "dev-skp"
		},
		"DevDb_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "127.0.0.1"
		},
		"DevDb_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "skp"
		},
		"DevDb_properties_typeProperties_username": {
			"type": "string",
			"defaultValue": "root"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "adf-skp_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"FilesStorage_connectionString": {
						"value": "[parameters('FilesStorage_connectionString')]"
					},
					"DevDb_password": {
						"value": "[parameters('DevDb_password')]"
					},
					"DEV_DB_properties_typeProperties_server": {
						"value": "[parameters('DEV_DB_properties_typeProperties_server')]"
					},
					"DEV_DB_properties_typeProperties_database": {
						"value": "[parameters('DEV_DB_properties_typeProperties_database')]"
					},
					"DevDb_properties_typeProperties_server": {
						"value": "[parameters('DevDb_properties_typeProperties_server')]"
					},
					"DevDb_properties_typeProperties_database": {
						"value": "[parameters('DevDb_properties_typeProperties_database')]"
					},
					"DevDb_properties_typeProperties_username": {
						"value": "[parameters('DevDb_properties_typeProperties_username')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "adf-skp_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'adf-skp_ArmTemplate_0')]"
			]
		},
		{
			"name": "adf-skp_ArmTemplate_2",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_2.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'adf-skp_ArmTemplate_1')]"
			]
		}
	]
}